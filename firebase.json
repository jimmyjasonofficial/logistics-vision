{
  "hosting": {
    "source": ".",
    "ignore": [
      "firebase.json",
      "apphosting.yaml",
      "README.md",
      ".vscode/**",
      "node_modules/**",
      ".env",
      ".git/**"
    ],
    "frameworksBackend": {
      "region": "us-central1"
    },
    "headers": [
      {
        "source": "/api/**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache, no-store, max-age=0"
          }
        ]
      },
      {
        "source": "/static/**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      }
    ]
  }
}
